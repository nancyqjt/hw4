<body>
  <div class="mt-2">
    <h1 class="text-success text-decoration-underline"><%= @place["name"] %></h1>
  </div>

  <div class="mt-4">
    <h3>My Posts</h3>
  </div>

  <div class="row">
    <% for post in @posts %>
      <div class="col-lg-4 col-md-4 col-xs-4">
        <h5><%= post["title"] %></h5>
        <p class="fs-6 fw-light"><%= post["posted_on"] %></p>
        <% if post.uploaded_image.attached? %>
          <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
        <% else %>
          <img src="<%= post["image"] %>" class="img-fluid">
        <% end %>
        <p><%= post["description"] %></p>
      </div>
    <% end %>
  </div>

  <div class="mt-5">
    <p>
      <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-dark">New Post</a>
    </p>
  </div>

  <p>
    <a href="/places" class="btn btn-dark">Back to All Places</a>
  </p>
</body>