<body class="container">
  <h1>New Post</h1>

  <%= form_with :model => @post do |form| %>
    <%= form.hidden_field "place_id" %>
    <p>
      <%= form.label "title" %>
      <%= form.text_field "title" %>
    </p>
    <p>
      <%= form.label "description" %>
      <%= form.text_field "description" %>
    </p>
    <p>
      <%= form.label "posted_on" %>
      <%= form.date_field "posted_on" %>
    </p>
    <div class="mt-5">
      <p>
        <button type="submit" class="btn btn-outline-dark">Upload a New Post</button>
      </p>
    </div>
  <% end %>
</body>
