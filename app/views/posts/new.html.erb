<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <%= form.hidden_field "place_id" %>
  <p>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p>
  <p>
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </p>
  <p>
      <%= form.label "image" %>
      <%= form.text_field "image" %>
  </p>
  <p>
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  </p>
  <p>
    <button type="submit" class="btn btn-outline-dark">Upload a New Post</button>
  </p>
<% end %>
